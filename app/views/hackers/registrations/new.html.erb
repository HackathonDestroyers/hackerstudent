<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4"> 
      <h2 class="login">Hacker Registration</h2>
      <div class="card">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="card-content">
          <div class="form-group">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, autofocus: true, class: "sign_field" %>
          </div>

          <div class="form-group">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, class: "sign_field" %>
          </div>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: "sign_field" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "sign_field" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "sign_field" %>
          </div>

          <div class="form-group">
            <%= f.label :language_ids, 'Programming languages you master' %><br />
            <%= f.select :language_ids, Language.all.collect {|l| [l.name, l.id]}, {}, multiple: true, data: { placeholder: 'Choose languages...' } %>
          </div>

        </div>
        <div class="card-action">
          <button type="submit" class="btn btn-primary btn-block btn-lg" value="Sign up">Register</button>
        </div>
        <% end %>
      </div>
      <div class="login">
        <%= render "hackers/shared/links" %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  var ready;
  ready = function() {
    $('#hacker_language_ids').chosen();
  };

  $(document).ready(ready);
  $(document).on('page:load', ready);
</script>
