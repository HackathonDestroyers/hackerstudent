<div id="request-help-container">
  hola <%= current_student.email %>

  <%= form_for(@mentorship) do |f| %>
    <%= f.hidden_field :student_id %>

    <div class="form-group">
            <%= f.label :language_id, 'Programming language you need help with' %><br />
            <%= f.select :language_id, Language.all.collect {|l| [l.name, l.id]}, {}, data: { placeholder: 'Choose language...' }, class: "sign_field" %>
    </div>

    <div class="actions">
      <%= f.submit "Search for mentor" %>
    </div>
  <% end %>

  <script type="text/javascript">
    var ready;
    ready = function() {
      $('#mentorship_language_id').chosen();
    };

    $(document).ready(ready);
    $(document).on('page:load', ready);
  </script>
</div>
