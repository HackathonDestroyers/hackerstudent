<%- model_class = Mentorship -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:hacker_id) %></th>
      <th><%= model_class.human_attribute_name(:student_id) %></th>
      <th><%= model_class.human_attribute_name(:started_at) %></th>
      <th><%= model_class.human_attribute_name(:ended_at) %></th>
      <th><%= model_class.human_attribute_name(:hacker_rating) %></th>
      <th><%= model_class.human_attribute_name(:student_rating) %></th>
      <th><%= model_class.human_attribute_name(:comment) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @mentorships.each do |mentorship| %>
      <tr>
        <td><%= link_to mentorship.id, mentorship_path(mentorship) %></td>
        <td><%= mentorship.hacker_id %></td>
        <td><%= mentorship.student_id %></td>
        <td><%= mentorship.started_at %></td>
        <td><%= mentorship.ended_at %></td>
        <td><%= mentorship.hacker_rating %></td>
        <td><%= mentorship.student_rating %></td>
        <td><%= mentorship.comment %></td>
        <td><%=l mentorship.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mentorship_path(mentorship), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mentorship_path(mentorship),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mentorship_path,
            :class => 'btn btn-primary' %>
